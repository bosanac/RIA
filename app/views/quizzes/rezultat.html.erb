<br><br>
<div class="panel-group">
  <div class="panel panel-primary">
  	<div class="panel-heading"><h1>REZULTAT:  <%= (session[:ispravnih_odgovora].to_i*100)/session[:ukupo_pitanja].to_i %> %</h1></div>
  	<div class="panel-body" style="text-align: center"><h4>Odgovoreno tacno na <b><%= session[:tacna_pitanja].length %></b> od ukupno <b><%= session[:ukupo_pitanja].to_i %></b> pitanja</h4>
  	
  		
  		

  	</div>
  	<% if session[:tacna_pitanja].length.to_i > 0 %>
  	<div class="panel-footer"><button style="width: 40%; margin-left:30%" type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">Prikazi tacne odgovore</button></div>	
  	<% end %>
  </div>

</div>



<!-- Modal -->
<div id="myModal" class="modal fade" role="dialog">
  <div class="modal-dialog modal-lg">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Tacni odgovori</h4>
      </div>
      <div class="modal-body">
          					
  						<%
  							session[:tacna_pitanja].each {|id_pitanja, id_odgovora| %>
  								<div class="well well-sm">
	  								<h4>Pitanje: <%=nazivPitanja id_pitanja%></h4>
	  								<h5>Odgovor: <%=nazivOdgovora id_odgovora%></h5>
  								</div>
  						<%	} %>

					
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>

  </div>
</div>

